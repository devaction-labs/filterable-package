{
    "name": "devaction-labs/filterable-package",
    "description": "A Laravel package for filterable traits and classes.",
    "keywords": ["php", "skeleton", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "DevAction Labs",
            "email": "alex@devaction.com.br"
        }
    ],
    "version": "v1.0.8",
    "require": {
        "php": "^8.2.0|^8.3.0",
        "illuminate/database": "^11.21",
        "illuminate/http": "^11.25",
        "illuminate/support": "^11.21",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "laravel/pint": "^1.13.7",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.35",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^0.18.13",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^6.4.0|^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "DevactionLabs\\FilterablePackage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
